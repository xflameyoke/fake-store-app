{
  "root": true,
  "parser": "@babel/eslint-parser",
  "plugins": [
    "@typescript-eslint",
    "react",
    "security",
    "prettier",
    "@babel"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": {
    "es6": true
  },
  "rules": {
    "react/prop-types": "error",
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true,
        "allowSeparatedGroups": true
      }
    ],
    "no-console": 1,
    "react/jsx-uses-react": 2,
    "react/react-in-jsx-scope": 2,
    "prettier/prettier": [
      "error", {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "babel",
        "semi": true,
        "useTabs": false,
        "tabWidth": 2,
        "printWidth": 80
      }
    ]
  }
  
}